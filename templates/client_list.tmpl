<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Client List</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            background-color: #f4f4f4;
        }
        h1 {
            text-align: center;
            color: #333;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        th, td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }
        th {
            background-color: #4CAF50;
            color: white;
        }
        tr:hover {
            background-color: #f5f5f5;
        }
        button {
            padding: 6px 12px;
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }
        button:hover {
            background-color: #45a049;
        }
    </style>
</head>
<body>
    <h1>Client List</h1>
    <table>
        <thead>
            <tr>
                <th>Client ID</th>
                <th>PID</th>
                <th>Flag</th>
                <th>Internal IP</th>
                <th>Public IP</th>
                <th>Computer Name</th>
                <th>User Name</th>
                <th>Process Name</th>
                <th>Last Active</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {{range .Clients}}
            <tr>
                <td>{{.ClientID}}</td>
                <td>{{.PID}}</td>
                <td>{{.Flag}}</td>
                <td>{{.IpAddress}}</td>
                <td>{{.IpAddress}}</td>
                <td>{{.ComputerName}}</td>
                <td>{{.UserName}}</td>
                <td>{{.ProcessName}}</td>
                <td>{{.LastActive.Format "2006-01-02 15:04:05"}}</td>
                <td>
                    <button onclick="sendCommand({{.ClientID}})">发送命令</button>
                </td>
            </tr>
            {{end}}
        </tbody>
    </table>

    <script>
        function sendCommand(clientId) {
            const command = prompt("请输入命令:");
            if (command === null || command.trim() === "") {
                alert("命令不能为空！");
                return;
            }

            const data = {
                client_id: clientId,
                type: 78,
                content: command
            };

            fetch('/issue_task', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(data)
            })
            .then(response => response.json())
            .then(result => {
                if (result.code === 0) {
                    alert('任务下发成功！');
                } else {
                    alert('任务下发失败：' + result.msg);
                }
            })
            .catch(error => {
                alert('请求失败：' + error);
            });
        }
    </script>
</body>
</html>